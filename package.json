{
	"name": "browsecraft-monorepo",
	"version": "0.0.0",
	"private": true,
	"description": "Browsecraft - AI-native browser automation framework built on WebDriver BiDi",
	"license": "MIT",
	"author": "Browsecraft Contributors",
	"repository": {
		"type": "git",
		"url": "https://github.com/rik9564/browsecraft.git"
	},
	"homepage": "https://github.com/rik9564/browsecraft#readme",
	"bugs": {
		"url": "https://github.com/rik9564/browsecraft/issues"
	},
	"engines": {
		"node": ">=20.0.0"
	},
	"packageManager": "pnpm@9.15.4",
	"scripts": {
		"build": "turbo run build",
		"dev": "turbo run dev",
		"test": "turbo run test",
		"lint": "biome check .",
		"lint:fix": "biome check --write .",
		"format": "biome format --write .",
		"typecheck": "turbo run typecheck",
		"clean": "turbo run clean",
		"test:smoke": "node tests/smoke.mjs",
		"test:coverage": "c8 --src packages --include 'packages/*/dist/**' --reporter text --reporter lcov node tests/smoke.mjs",
		"changeset": "changeset",
		"version-packages": "changeset version",
		"release": "pnpm build && changeset publish",
		"prepare": "husky"
	},
	"devDependencies": {
		"@biomejs/biome": "1.9.4",
		"@changesets/changelog-github": "^0.5.2",
		"@changesets/cli": "^2.29.8",
		"c8": "^10.1.3",
		"husky": "^9.1.7",
		"lint-staged": "^16.2.7",
		"turbo": "^2.8.10"
	},
	"lint-staged": {
		"*.{ts,js,mjs,json}": "biome check --write --no-errors-on-unmatched"
	}
}
