{
	"name": "browsecraft-runner",
	"version": "0.6.3",
	"description": "Test runner and CLI for Browsecraft",
	"type": "module",
	"main": "./dist/index.cjs",
	"module": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js",
			"require": "./dist/index.cjs"
		}
	},
	"files": ["dist", "LICENSE"],
	"scripts": {
		"build": "tsup",
		"dev": "tsup --watch",
		"typecheck": "tsc --noEmit",
		"test": "vitest run",
		"clean": "rimraf dist"
	},
	"sideEffects": false,
	"publishConfig": {
		"access": "public"
	},
	"dependencies": {},
	"devDependencies": {
		"@types/node": "^25.3.0",
		"tsup": "^8.3.5",
		"typescript": "^5.7.2",
		"vitest": "^4.0.18",
		"rimraf": "^6.0.1"
	},
	"license": "MIT",
	"author": "Browsecraft Contributors",
	"repository": {
		"type": "git",
		"url": "https://github.com/rik9564/browsecraft.git",
		"directory": "packages/browsecraft-runner"
	},
	"homepage": "https://github.com/rik9564/browsecraft#readme",
	"bugs": {
		"url": "https://github.com/rik9564/browsecraft/issues"
	},
	"engines": {
		"node": ">=20.0.0"
	}
}
